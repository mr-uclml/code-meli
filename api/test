<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Page</title>
</head>
<body>
    <div id="content"></div>

    <script>
        async function validator(val) {
            // Extract the first three digits of the codemli
            const firstThreeDigits = val.substring(0, 3);

            // Fetch JSON data from the server
            const response = await fetch('/db/first_3_number.json');
            const data = await response.json();

            // Find the city based on the first three digits of the code
            for (const city of data) {
                const cityCodes = city["سه رقم اول کد ملی"].split('-');
                if (cityCodes.includes(firstThreeDigits)) {
                    return city["شهر صدور کد ملی"];
                }
            }

            return false; // Return false if no matching city is found
        }

        // Extract the codemli parameter from the URL
        const urlParams = new URLSearchParams(window.location.search);
        const codemli = urlParams.get('codemli');

        // Validate the codemli and return the result as JSON
        validator(codemli).then((city) => {
            const resultJSON = JSON.stringify({ codemli: codemli, city: city });
            // Display the result JSON on the page
            document.getElementById('content').innerText = resultJSON;
        }).catch((error) => {
            console.error('Error:', error);
        });
    </script>
</body>
</html>
